# User Service Environment Configuration

# Server Configuration
PORT=8081
HOST=0.0.0.0
READ_TIMEOUT=30
WRITE_TIMEOUT=30

# Database Configuration
DB_DRIVER=sqlite
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=
DB_NAME=user_service.db
DB_SSLMODE=disable

# For PostgreSQL (uncomment and modify as needed):
# DB_DRIVER=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=yourpassword
# DB_NAME=user_service
# DB_SSLMODE=disable

# Logger Configuration
LOG_LEVEL=info
LOG_FORMAT=text

# Application Configuration
APP_ENV=development
APP_NAME=user-service
APP_VERSION=1.0.0

# Security Configuration (for future use)
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRATION=24h

# Redis Configuration (for future use)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Monitoring Configuration (for future use)
METRICS_ENABLED=true
METRICS_PORT=9090

# Rate Limiting (for future use)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60s
